<Window x:Class="Work5.View.WindowReg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work5.View"
        mc:Ignorable="d"
        Title="Органы" Height="450" Width="800">
    <StackPanel Background="#FFD8D8D8">
        <ListView x:Name="lvReg" Background="#FFD3CDCD">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Код" Width="50" 
                                        DisplayMemberBinding="{Binding ID}" />
                        <GridViewColumn Header="Полное название" Width="150"
                                        DisplayMemberBinding="{Binding NameFull}" />
                        <GridViewColumn Header="Сокр. название" Width="150"
                                        DisplayMemberBinding="{Binding NameShort}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
